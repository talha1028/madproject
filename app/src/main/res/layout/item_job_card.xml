<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Job Title -->
        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="House Renovation Required"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvStatus" />

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:background="@drawable/bg_status_green"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Category -->
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electrician"
            android:textSize="13sp"
            android:textColor="#7C4DFF"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvJobTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Location Icon -->
        <ImageView
            android:id="@+id/icLocation"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_location"
            app:tint="#757575"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvCategory"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Location Text -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="DHA Phase 5, Lahore"
            android:textSize="13sp"
            android:textColor="#757575"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/icLocation"
            app:layout_constraintBottom_toBottomOf="@id/icLocation"
            app:layout_constraintStart_toEndOf="@id/icLocation"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvLocation" />

        <!-- Budget Icon -->
        <ImageView
            android:id="@+id/icBudget"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_money"
            app:tint="#7C4DFF"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Budget Label -->
        <TextView
            android:id="@+id/tvBudgetLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/icBudget"
            app:layout_constraintStart_toEndOf="@id/icBudget" />

        <!-- Budget Amount -->
        <TextView
            android:id="@+id/tvBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 50,000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/icBudget"
            app:layout_constraintBottom_toBottomOf="@id/icBudget"
            app:layout_constraintStart_toEndOf="@id/tvBudgetLabel" />

        <!-- Bids Count -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@id/icBudget"
            app:layout_constraintBottom_toBottomOf="@id/icBudget"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_bid"
                app:tint="#FFA726" />

            <TextView
                android:id="@+id/tvBidsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Bids"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFA726"
                android:layout_marginStart="4dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>